{
  "manifest_version": 2,

  "name": "Twitter Social Toolkit",
  "description": "Copy and shear to your twitter profile.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  },
  "permissions":[
    "contextMenus"
  ]
